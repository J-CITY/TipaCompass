<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="0dp" android:id="@+id/relativeLayout"
                    tools:ignore="MissingConstraints">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                tools:text="TipaCompass" android:textColor="@color/colorAccent"
                tools:layout_editor_absoluteX="8dp" tools:layout_editor_absoluteY="8dp"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="32dp"/>
        <android.support.design.widget.FloatingActionButton
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:clickable="true" app:srcCompat="@android:drawable/ic_menu_compass"
                android:id="@+id/fab"
                app:backgroundTint="@color/design_default_color_primary"
                android:onClick="onClickBtn"
                android:layout_centerInParent="true"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/compass" android:id="@+id/imageCompass"
                android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
                android:layout_alignParentStart="true" android:layout_marginStart="0dp"/>
        <ImageView
                android:layout_width="69dp"
                android:layout_height="93dp" app:srcCompat="@drawable/green"
                android:id="@+id/staticPoint" android:layout_alignParentTop="true"
                android:layout_marginTop="208dp"
                android:layout_marginStart="155dp" android:layout_marginEnd="160dp"
                android:layout_alignEnd="@+id/imageCompass" android:layout_marginBottom="210dp"
                android:layout_alignBottom="@+id/imageCompass" android:layout_alignParentStart="true"/>
        <ImageView
                android:layout_width="69dp"
                android:layout_height="93dp" app:srcCompat="@drawable/red"
                android:id="@+id/dynamicPoint" android:layout_alignParentTop="true"
                android:layout_marginTop="208dp"
                android:layout_marginStart="156dp" android:layout_marginEnd="159dp"
                android:layout_alignEnd="@+id/imageCompass" android:layout_alignParentStart="true"
                android:layout_marginBottom="210dp" android:layout_alignBottom="@+id/imageCompass"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>